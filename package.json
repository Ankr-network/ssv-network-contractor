{
  "name": "ssv-network-contractor",
  "version": "0.0.2",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "generate:proto": "proto-loader-gen-types --outDir ./src/generated/ --grpcLib @grpc/grpc-js proto/ssv-network-contractor.proto",
    "generate:abi": "./abi.bash",
    "postinstall": "npm run generate:proto && npm run generate:abi",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.7.1",
    "@grpc/proto-loader": "^0.7.2",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/microservices": "^9.1.1",
    "@nestjs/platform-express": "^8.0.0",
    "bignumber.js": "^9.1.1",
    "bip39": "^3.0.4",
    "bls-eth-wasm": "^1.0.5",
    "bls-signatures": "^1.0.16",
    "js-base64": "^3.7.2",
    "node-fetch": "^2.6.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ssv-keys": "^0.0.18",
    "web3": "^1.8.0",
    "web3-eth-contract": "^1.8.0",
    "web3-utils": "^1.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@typechain/web3-v1": "^6.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^18.7.18",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typechain": "^8.1.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
